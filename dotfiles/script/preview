#!/usr/bin/env sh
# Preview script for fzf
case "$1" in
*.png | *.jpg | *.jpeg | *.mkv | *.mp4 | *.mp3) mediainfo "$1" ;;
*.pdf) pdftotext "$1" - ;;
*.zip) zipinfo "$1" ;;
*.tar.gz) tar -ztvf "$1" ;;
*.tar.bz2) tar -jtvf "$1" ;;
*.tar) tar -tvf "$1" ;;
*.rar) unrar l "$1" ;;
*.7z) 7z l "$1" ;;
*.html | *.xml) w3m -dump "$1" ;;
*)
	[ -f "$1" ] && cat "$1"
	[ -d "$1" ] && tree "$1" -L 1 --dirsfirst
	;;
esac