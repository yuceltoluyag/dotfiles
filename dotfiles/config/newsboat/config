browser "xdg-open"
macro o set browser "/usr/bin/mpv %u > /dev/null 2>&1 &" ; open-in-browser ; set browser "xdg-open"
macro y set browser "youtube-dl %u"; open-in-browser ; set browser "xdg-open"

