# -------------------------------- FUNCTIONS ---------------------------------
function lazygit() {
	git status .
	git add .
	git commit -S -m "$1"
	git push origin master
}

function find() {
	if [ $# = 1 ];
	then
		command find . -iname "*$@*"
	else
		command find "$@"
	fi
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

